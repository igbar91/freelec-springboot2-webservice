{{>layout/header}}

<div class="col-md-12">
    <h1>전체 리스트</h1><h6>* 총 {{totalCount}}개의 리뷰가 있습니다.</h6>
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>영화</th>
            <th>제목</th>
            <th>작성자</th>
            <th>날짜</th>
            <th>별점</th>
            <th>조회수</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#list}}
            <tr>
                <td>{{movieId}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{userId}}</td>
                <td>{{regDate}}</td>
                <td>{{score}}</td>
                <td>{{viewCount}}</td>
            </tr>
        {{/list}}
        </tbody>
    </table>
    <br>
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
</div>
{{>layout/footer}}